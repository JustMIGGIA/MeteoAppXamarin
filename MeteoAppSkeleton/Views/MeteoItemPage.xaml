<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MeteoAppSkeleton.Views.MeteoItemPage">
    <ContentPage.Content>
        <StackLayout Spacing="50" x:Name="container" HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="{Binding Name}" HorizontalTextAlignment="Center" FontSize="Large"></Label>
            <Label Text="{Binding Temp, StringFormat='{0}°'}" HorizontalTextAlignment="Center" FontSize="Title"></Label>
            <Label Text="{Binding Desc}" HorizontalTextAlignment="Center"></Label>
            <FlexLayout Direction="Row" AlignItems="Center" JustifyContent="SpaceEvenly">
                <Label Text="{Binding TempMin, StringFormat='{0}°'}"></Label>
                <Label Text="{Binding TempMax, StringFormat='{0}°'}"></Label>
            </FlexLayout>
            <FlexLayout Direction="Row" AlignItems="Center" JustifyContent="SpaceEvenly">
                <Label Text="{Binding Humidity, StringFormat='{0}%'}"></Label>
                <Label Text="{Binding Pressure, StringFormat='{0}Pa'}"></Label>
            </FlexLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>